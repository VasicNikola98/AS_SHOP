
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Caballeros - administratorska radna tabla</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/AdminContent/plugins/fontawesome-free/css/all.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/AdminContent/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/AdminContent/dist/css/adminlte.min.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />

    <link rel="stylesheet" href="~/AdminContent/dist/css/adminStyle.css" />

    <link rel="stylesheet" href="~/AdminContent/dist/css/loader.css" />

    <!-- Favicon and touch icons  -->
    <link href="~/Content/icon/caballeros.ico" rel="~/shortcut icon">

    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

    <!-- jQuery -->
    <script src="~/AdminContent/plugins/jquery/jquery.min.js"></script>
</head>
<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed">
   
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="@Url.Action("Index","Admin")" class="nav-link">Home</a>
                </li>
            </ul>

        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->
            <a href="@Url.Action("Index","Admin")" class="brand-link">
                <img src="~/AdminContent/dist/img/adminLogoCaballeros.png" alt="Cabbaleros logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">CABALLEROS</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="info">
                        <a href="#" class="d-block">@User.Identity.Name</a>
                        <span style="color:#696865;">Administrator</span>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class='nav-icon bx bx-shopping-bag'></i>
                                <p>
                                    Proizvodi
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Product")" class="nav-link">
                                        <i class="nav-icon fas fa-tshirt"></i>
                                        <p>Svi proizvodi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Create","Product")" class="nav-link">
                                        <i class="nav-icon fas fa-plus-square text-secondary"></i>
                                        <p>Dodaj proizvod</p>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class='nav-icon bx bx-category-alt'></i>
                                <p>
                                    Kategorije
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Category")" class="nav-link">
                                        <i class='nav-icon bx bx-purchase-tag'></i>
                                        <p>Sve kategorije</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Create","Category")" class="nav-link">
                                        <i class="nav-icon fas fa-plus-square text-secondary"></i>
                                        <p>Dodaj kategoriju</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class='nav-icon bx bx-box'></i>
                                <p>
                                    Porudžbine
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("Index","Order")" class="nav-link">
                                        <i class="nav-icon fas fa-box-open"></i>
                                        <p>Sve porudžbine</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("ArhiveIndex","Order")" class="nav-link">
                                        <i class="nav-icon fas fa-boxes"></i>
                                        <p>Arhivirane porudžbine</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-mail-bulk"></i>
                                <p>
                                    Newsletters
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                            <ul class="nav nav-treeview">
                                <li class="nav-item">
                                    <a href="@Url.Action("NewsletterIndex","Admin")" class="nav-link">
                                        <i class="nav-icon fas fa-users"></i>
                                        <p>Svi pretplatnici</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("NewSletter","Admin")" class="nav-link">
                                        <i class="nav-icon fas fa-user-secret"></i>
                                        <p>Novi zahtevi</p>
                                    </a>
                                </li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("Reviews","Product")" class="nav-link">
                                <i class="nav-icon far fa-comments"></i>
                                <p>
                                    Komentari
                                </p>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a href="@Url.Action("Index","Home")" class="nav-link">
                                <i class="nav-icon fas fa-glasses"></i>
                                <p>
                                    Pregledaj sajt
                                </p>
                            </a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                    <li class="nav-header">MOJ NALOG</li>
 using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutFormFooter" }))
                    {
                    <li class="nav-item">
                        <a href="javascript:submitFormFooter()" title="Logout" class="nav-link">
                            <i style="margin-left: 6px; font-size: 19px;" class="nav-icon fas fa-sign-out-alt"></i>
                            <p style="margin-left: 4px;">
                                Odjavi se
                            </p>
                        </a>
                    </li>
}
            }
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <section class="content">
                <div class="container-fluid">
                    <div class="loader-wrapper">
                        <div class="lds-ring"><div></div><div></div><div></div></div>
                    </div>
                </div>
            </section>

            @RenderBody()

        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 2021</strong>
            Sva prava zadržana.
        </footer>
    </div>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>

    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- Bootstrap -->
    <script src="~/AdminContent/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/AdminContent/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/AdminContent/dist/js/adminlte.js"></script>

    <!-- PAGE PLUGINS -->
    <!-- jQuery Mapael -->
    <script src="~/AdminContent/plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="~/AdminContent/plugins/raphael/raphael.min.js"></script>
    <script src="~/AdminContent/plugins/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="~/AdminContent/plugins/jquery-mapael/maps/usa_states.min.js"></script>
    <!-- ChartJS -->
    <script src="~/AdminContent/plugins/chart.js/Chart.min.js"></script>

    <!-- AdminLTE for demo purposes -->
    <script src="~/AdminContent/dist/js/demo.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/AdminContent/dist/js/pages/dashboard2.js"></script>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <script src="~/AdminContent/dist/js/adminLayout.js"></script>
</body>
</html>

