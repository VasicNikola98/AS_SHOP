@model ASonline.ViewModels.NewslatterViewModel
@{
    ViewBag.Title = "NewSletter";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<section class="content p-3">
    <div class="container-fluid">
        @if (Model.Newsletters.Count > 0 && Model.Newsletters != null)
        {
            <div class="row">

          
              @foreach (var user in Model.Newsletters)
               {
                      <div class="col-md-6">
                          <div class="card text-center">
                              <div class="card-header">
                                  <div class="card-title">Newslatter</div>
                              </div>
                              <div class="card-body">
             
                                  <h5 class="card-title text-left font-italic">Email:  <span class="font-weight-bold text-info"> @user.NewsletterEmail</span></h5>
             
                                  <br />
                                  <div class="d-flex justify-content-between mt-3">
                                      <a class="acceptNewsletter" href="@Url.Action("AcceptNewsletter","Admin", new { Id = user.Id })">
                                          <i class="fas fa-user-check"></i>
                                      </a>
                                      <a class="declineNewsletter" href="@Url.Action("DeclineNewsletter","Admin", new { Id = user.Id })">
                                          <i class="fas fa-user-times"></i>
                                      </a>
                                  </div>
                              </div>
                              <div class="card-footer text-muted">
                                  Datum pretplate:  @user.SubscribedAt.ToShortDateString()
                              </div>
                          </div>
                      </div>
               }
        </div>
        }
        else
        {

            <div class="row">
                <div class="col-12">
                    <div class="container-fluid d-flex align-items-center mt-5 flex-wrap">
                        <div class="col-md-6">
                            <p class="text-center font-italic">
                                Nažalost još uvek nemate ni jedan zahtev za pretplatu. <br />
                                Nezaboravite da pormovišete Vaš biznis na društvenim mrežama!
                            </p>
                        </div>
                        <div class="col-md-6">
                            <img style="width: 100%; height: 100%;" src="~/Content/images/admin/emptyResult.svg" />
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>